<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/h_frame">

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout android:layout_height="match_parent"
            android:layout_width="128dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/hp_src"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="128dp"
                android:id="@+id/ht_src"
                android:layout_height="180dp"
                android:layout_alignParentBottom="true"
                android:onClick="onclick">

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/small_box"
                    android:id="@+id/hb_1"
                    android:layout_height="30dp" />

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/medium_box"
                    android:id="@+id/hb_2"
                    android:layout_height="40dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/large_box"
                    android:id="@+id/hb_3" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/largest_box"
                    android:id="@+id/hb_4" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="128dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/hp_aux"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="180dp"
                android:layout_width="128dp"
                android:id="@+id/ht_aux"
                android:layout_alignParentBottom="true">

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="128dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/hp_tgt"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="180dp"
                android:layout_width="128dp"
                android:id="@+id/ht_tgt"
                android:layout_alignParentBottom="true">

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
