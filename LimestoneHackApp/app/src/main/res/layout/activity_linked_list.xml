<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_linked_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.android.limestonehackapp.LinkedListActivity">

    <TextView
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:text="Bottom of Tier List"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="16dp" />

    <ImageView
        android:id="@+id/kirbyImg1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/kirby"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/ganonImg1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ganon"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/foxImg1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/fox"
        android:visibility="visible" />
    <Button
        android:id="@+id/nextNode"
        android:visibility="visible"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="30dp"
        android:text="Next Node"
        android:onClick="openNextImage"/>
</LinearLayout>
