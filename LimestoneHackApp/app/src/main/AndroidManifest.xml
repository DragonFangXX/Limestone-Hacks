<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.limestonehackapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BinarySearchActivity"
            android:label="Binary Search Fun"
            android:theme="@style/BinaryTheme" />
        <activity
            android:name=".ExtraHelpActivity"
            android:label="Additional Resources"
            android:theme="@style/ExtraHelpTheme" />
        <activity android:name=".LinkedListActivity"
            android:label="Smashing Linked Lists"
            android:theme="@style/LinkedListTheme"/>
        <activity
            android:name=".HanoiActivity"
            android:label="HAAAANNNOOOOI"
            android:theme="@style/RecursionTheme"></activity>
        </activity>
    </application>

</manifest>